<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvServiceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvServiceName"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:gravity="end"
        android:paddingLeft="20dp"
        android:text="Desc"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="italic"
        tools:text="@android:string/fingerprint_icon_content_description" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingLeft="20dp"
        android:text="Desc"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="@android:string/fingerprint_icon_content_description"
        android:layout_above="@+id/tvDesc"
        android:layout_alignRight="@+id/tvDesc"
        android:layout_alignEnd="@+id/tvDesc" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
        android:layout_width="83dp"
        android:layout_height="20dp"
        android:numStars="5"
        android:rating="4"
        android:stepSize="1"
        android:layout_below="@+id/tvDesc"
        android:layout_alignLeft="@+id/tvServiceName"
        android:layout_alignStart="@+id/tvServiceName" />
</RelativeLayout>