<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sanal.smartlamp.RegisterActivity">

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="368dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/etName"
        app:layout_constraintRight_toRightOf="@+id/etName"
        app:layout_constraintTop_toBottomOf="@+id/etName"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/etName"
        android:layout_alignLeft="@+id/etPhone"
        android:layout_alignStart="@+id/etPhone" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/etUsername"
        app:layout_constraintRight_toRightOf="@+id/etUsername"
        app:layout_constraintTop_toBottomOf="@+id/etUsername"
        android:layout_below="@+id/etUsername"
        android:layout_toRightOf="@+id/etName"
        android:layout_toEndOf="@+id/etName"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="368dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="address"
        android:inputType="textPostalAddress"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintLeft_toLeftOf="@+id/etPassword"
        app:layout_constraintRight_toRightOf="@+id/etPassword"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
        android:layout_below="@+id/etPassword"
        android:layout_toRightOf="@+id/etName"
        android:layout_toEndOf="@+id/etName"
        android:layout_marginTop="28dp" />

    <EditText
        android:id="@+id/etLicense"
        android:layout_width="364dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="License Plate No"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/etMail"
        app:layout_constraintRight_toRightOf="@+id/etMail"
        app:layout_constraintTop_toBottomOf="@+id/etMail"
        android:layout_below="@+id/etAddress"
        android:layout_toRightOf="@+id/etName"
        android:layout_toEndOf="@+id/etName"
        android:layout_marginTop="29dp" />

    <Button
        android:id="@+id/registerBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:text="Register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPhone" />

    <EditText
        android:id="@+id/etMail"
        android:layout_width="366dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="abc@company.com"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/etAddress"
        app:layout_constraintRight_toRightOf="@+id/etAddress"
        app:layout_constraintTop_toBottomOf="@+id/etAddress"
        android:layout_below="@+id/etLicense"
        android:layout_alignLeft="@+id/etLicense"
        android:layout_alignStart="@+id/etLicense"
        android:layout_marginTop="17dp" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="364dp"
        android:layout_height="36dp"
        android:ems="10"
        android:hint="@android:string/emptyPhoneNumber"
        android:inputType="phone"
        app:layout_constraintLeft_toLeftOf="@+id/etLicense"
        app:layout_constraintRight_toRightOf="@+id/etLicense"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/etLicense"
        android:layout_below="@+id/etMail"
        android:layout_toRightOf="@+id/etName"
        android:layout_marginTop="23dp"
        android:layout_alignRight="@+id/etLicense"
        android:layout_alignEnd="@+id/etLicense" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="New User Registration"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
